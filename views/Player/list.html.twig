{% extends 'layout.html.twig' %}

{% block title %}Players{% endblock %}

{% block content %}
    <div class="table players">
        <ul>
            <li>Name</li>
            <li>Team</li>
            <li>Joined</li>
        </ul>

    {% for player in players %}
        <ul>
            <li><a href="{{ player.url }}">{{ player.username }}</a>
            <li>
                {% if player.team is valid %}
                    {{ link_to(player.team) }}
                {% endif %}
            </li>
            <li>{{ player.joinedDate }}</li>
        </ul>
    {% endfor %}

    </div>
{% endblock %}
