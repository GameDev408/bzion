<article class="c-article">
    <h1 class="c-article__title">{{ link_to(article) }}</h1>
    <p class="c-article__data">{{ article.created | date("F d, Y") }}</p>

    <section class="c-article__content s-markdown">
        {{ article.content }}
    </section>

    <ul class="c-article__meta">
        <li>
            <i class="fa fa-user"></i> {{ link_to(article.author) }}
        </li>
        <li>
            <i class="fa fa-tag"></i> {{ link_to(article.category) }}
        </li>
    </ul>
</article>