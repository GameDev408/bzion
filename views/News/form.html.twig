<main class="page news editor">
    <section class="page__header">
        <div class="page__header__container">
            <section class="page__header__container__title">
                <h1>{{ pageTitle }}</h1>
            </section>
        </div>
    </section>

    {{ form_start(form, { 'attr': { 'class': 'form--editor--container' } }) }}
    <section class="form--editor">
        <article class="form--body">
            {{ form_row(form.subject) }}
            {{ form_row(form.content, { 'attr': { 'class': 'form--body--content' } }) }}
        </article>

        <aside class="form--meta">
            {{ form_row(form.category) }}
            {{ form_row(form.status) }}
        </aside>
    </section>

    <section class="form--actions">
        {{ form_rest(form) }}
    </section>
    {{ form_end(form) }}
</main>