users
	id					// user id, primary key
	bzid					// bzflag id
	team					// team id
	username				// bzflag callsign & website username
	status					// website status: active, disabled, reported, banned
	access					// access level id
	avatar					// url to profile avatar
	description				// profile description
	country					// geographical location
	timezone				// timezone
	joined					// join date
	last_login				// date of last login

teams
	id					// team id, primary key
	name					// team name
	description				// team description
	avatar					// url to team avater
	created					// date created
	score					// ELO score
	activity				// current team activity
	leader					// bzid of leader
	matches_won				// number of matches won
	matches_lost				// number of matches lost
	matches_draw				// number of matches ending in a draw
	members					// number of members
	status					// team status: open, closed, deleted

matches
	id					// match id, primary key
	team_a					// team a
	team_b					// team b
	team_a_points				// team a points scored
	team_b_points				// team b points scored
	team_a_elo				// team a new elo
	team_b_elo				// team b new elo
	elo_diff				// difference between new elo and old elo
	timestamp 				// timestamp of match
	duration				// match duration: 20 or 30
	entered_by				// bzid of person that entered the match
	status					// match status: entered, deleted

countries
	id					// country id, primary key
	name					// country name
	flag					// url of country flag

invitations
	id					// invite id, primary key
	invited_player				// bzid of invited player
	team					// id of inviting team
	expiration				// timestamp of invite expiration
	text					// invite text

mail
	id					// mail id, primary key
	to 					// recipient's bzid
	from					// sender's bzid
	subject					// mail subject
	timestamp				// timestamp of mail
	message					// mail body
	status					// status of mail: unread, read, reported, deleted

visits
	id					// visit id, primary key
	bzid					// bzid of visiting player
	ip					// visitor's ip address
	host					// visitor's host
	referer					// HTTP referer
	timestamp				// timestamp of visit
	
pages
	id					// page id, primary key
	name					// page name
	content					// page content
	created					// timestamp of creation
	updated					// timestamp of last update
	author					// bzid of author
	
news
	id					// news id, primary key
	subject					// news subject
	content					// news content
	created					// timestamp of creation
	updated					// timestamp of last update
	author					// bzid of author
	
bans
	id					// ban id, primary key
	player					// bzid of banned player
	expiration				// timestamp when ban is lifted
	reason					// ban reason
	created					// timestamp of creation
	updated					// timestamp of last update
	author					// bzid of banner
	
servers
	id					// server id, primary key
	name					// server name
	address					// server address, including port
	owner					// bzid of owner
	info					// serialized array of bzfquery info
	updated					// last update
	
permissions
	id					// permission id, primary key
	name					// permission name
	add_user				// add a new user
	edit_user				// edit a user
	del_user				// delete a user
	add_team				// add a new team
	edit_team				// edit a team
	del_team				// delete a team
	add_match				// add a new match
	edit_match				// edit a match
	del_match				// delete a match
	add_page				// add a new page
	edit_page				// edit a page
	del_page				// delete a page
	add_news				// add a new news entry
	edit_news				// edit a news entry
	del_news				// delete a news entry
	add_ban					// add a new ban
	edit_ban				// edit a ban
	del_ban					// delete a ban
	add_server				// add a new server
	edit_server				// edit a server
	del_server				// delete a server
	add_perm				// add a new permission
	edit_perm				// edit a permission
	del_perm				// delete a permission
