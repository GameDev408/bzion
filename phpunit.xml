<phpunit
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/3.7/phpunit.xsd"
         bootstrap="bzion-load.php"
         colors="true">
    <testsuites>
    <testsuite name="BzIon Test Suite">
      <directory suffix="Test.php" phpVersion="5.3.0" phpVersionOperator=">=">tests</directory>
    </testsuite>
  </testsuites>

  <filter>
    <blacklist>
      <directory suffix=".php">app/cache</directory>
      <directory suffix=".php">app/Command</directory>
      <directory suffix=".php">includes</directory>
      <directory suffix=".php">tests</directory>
      <directory suffix=".php">vendor</directory>
    </blacklist>
  </filter>
</phpunit>
