{
    "name": "allejo/bzion",
    "description": "A new CMS for BZFlag leagues offered as an alternative to the bz-owl project",
    "type": "project",
    "license": "GPL-3.0",

    "require": {
        "php"                        : ">=5.3.0",
        "cboden/ratchet"             : "0.2.*",
        "doctrine/inflector"         : "~1.0",
        "ext-gd"                     : "*",
        "friendsofsymfony/elastica-bundle": "~3.0",
        "ivaynberg/select2"          : "dev-master",
        "liip/imagine-bundle"        : "~1.0",
        "michelf/php-markdown"       : ">=1.4.1",
        "nesbot/carbon"              : ">=1.8.0",
        "pusher/pusher-php-server"   : "dev-master",
        "rhumsaa/array_column"       : "~1.1",
        "robmorgan/phinx"            : "~0.3",
        "symfony/class-loader"       : ">=2.5.0",
        "symfony/config"             : ">=2.5.0",
        "symfony/console"            : ">=2.5.0",
        "symfony/event-dispatcher"   : ">=2.5.0",
        "symfony/expression-language": ">=2.5.0",
        "symfony/framework-bundle"   : ">=2.5.0",
        "symfony/finder"             : ">=2.5.0",
        "symfony/form"               : ">=2.5.0",
        "symfony/http-kernel"        : ">=2.5.0",
        "symfony/http-foundation"    : ">=2.5.0",
        "symfony/icu"                : "1.0.*",
        "symfony/monolog-bundle"     : ">=2.5.0",
        "symfony/process"            : ">=2.5.0",
        "symfony/routing"            : ">=2.5.0",
        "symfony/security-core"      : ">=2.5.0",
        "symfony/security-csrf"      : ">=2.5.0",
        "symfony/swiftmailer-bundle" : ">=2.3.0",
        "symfony/twig-bridge"        : ">=2.5.0",
        "symfony/twig-bundle"        : ">=2.5.0",
        "symfony/validator"          : ">=2.5.0",
        "symfony/yaml"               : ">=2.5.0",
        "swiftmailer/swiftmailer"    : ">=5.2.0",
        "twig/twig"                  : "dev-master",
        "yzalis/identicon"           : "1.1.*@dev"
    },
    "require-dev": {
        "behat/behat": "3.0.*@stable",
        "behat/mink": "~1.6@dev",
        "behat/mink-extension": "~2.0@dev",
        "behat/mink-browserkit-driver": "~1.2@dev",
        "behat/symfony2-extension": "dev-master",
        "symfony/browser-kit": ">=2.5.0",
        "symfony/web-profiler-bundle": ">=2.5.0",
        "phpunit/phpunit": "4.1.*",
        "phpdocumentor/phpdocumentor": "dev-develop",
        "sensio/distribution-bundle": "3.0.*@dev",
        "raulfraile/ladybug-bundle": "~1.0"
    },

    "scripts": {
        "post-create-project-cmd": [
            "git submodule update --init",
            "BZIon\\Composer\\ScriptHandler::buildConfig",
            "BZIon\\Composer\\ScriptHandler::migrateDatabase",
            "BZIon\\Composer\\ScriptHandler::clearCache",
            "BZIon\\Composer\\ScriptHandler::initializeChangelog",
            "BZIon\\Composer\\ScriptHandler::showSuccessMessage"
        ],
        "upgrade": [
            "git pull origin",
            "git submodule sync",
            "git submodule update --init",
            "app/upgrade.sh --no-dev --ansi install",
            "BZIon\\Composer\\ScriptHandler::buildConfig",
            "BZIon\\Composer\\ScriptHandler::migrateDatabase",
            "BZIon\\Composer\\ScriptHandler::clearCache",
            "BZIon\\Composer\\ScriptHandler::showChangelog"
        ],
        "migrate": [
            "BZIon\\Composer\\ScriptHandler::buildConfig",
            "BZIon\\Composer\\ScriptHandler::migrateDatabase",
            "BZIon\\Composer\\ScriptHandler::showChangelog"
        ],
        "migrate-database": [
            "BZIon\\Composer\\ScriptHandler::migrateDatabase"
        ],
        "update-configuration": [
            "BZIon\\Composer\\ScriptHandler::buildConfig"
        ]
    },
    "autoload": {
        "classmap" : [
            "models/",
            "controllers/",
            "src/Controller",
            "src/Exception",
            "src/Model",
            "src/QueryBuilder",
            "src/Database.php",
            "src/Service.php",
            "src/TimeDate.php"
        ],
        "psr-4"    : {
            "": "app/",
            "BZIon\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [ "tests/" ]
    },
    "archive": {
        "exclude": ["app/config.yml", "bzion_errors.log", ".sass_cache"]
    },
    "replace": {
        "symfony/swiftmailer-bridge": "*"
    },
    "config": {
        "component-dir": "web/components"
    }
}
