{
    "name": "allejo/bzion",
    "description": "A new CMS for BZFlag leagues offered as an alternative to the bz-owl project",
    "type": "project",
    "license": "LGPL-3.0",

    "require": {
        "nesbot/carbon"           : ">=1.8.0",
        "symfony/config"          : ">=2.4.0",
        "symfony/console"         : ">=2.4.0",
        "symfony/event-dispatcher": ">=2.4.0",
        "symfony/framework-bundle": ">=2.4.0",
        "symfony/finder"          : ">=2.4.0",
        "symfony/process"         : ">=2.4.0",
        "symfony/routing"         : ">=2.4.0",
        "symfony/http-kernel"     : ">=2.4.0",
        "symfony/http-foundation" : ">=2.4.0",
        "symfony/twig-bridge"     : ">=2.4.0",
        "symfony/twig-bundle"     : ">=2.4.0",
        "symfony/yaml"            : ">=2.4.0",
        "twig/twig"               : "dev-master",
        "symfony/class-loader"    : ">=2.4.0"
    },
    "require-dev": {
        "symfony/browser-kit": ">=2.4.0",
        "symfony/form"       : ">=2.4.0",
        "symfony/web-profiler-bundle": ">=2.4.0",
        "phpunit/phpunit": "4.1.*",
        "phpdocumentor/phpdocumentor": "dev-develop",
        "sensio/distribution-bundle": "3.0.*@dev"
    },

    "autoload": {
        "classmap" : [ "models/", "controllers/"],
        "psr-4"    : { "": "app/" }
    },
    "autoload-dev": {
        "classmap": [ "tests/"]
    },
    "archive": {
        "exclude": ["/bzion-config.php", "bzion_errors.log", ".sass_cache"]
    }
}
